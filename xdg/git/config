[commit]
   gpgsign  = true
   cleanup  = strip
   template = ~/.config/git/message
   verbose  = true

[push]
   default = current

[pull]
   ff     = only
   rebase = true

[rebase]
   autoStash = true

[init]
   defaultBranch = main

[core]
   editor = nvim
   pager  = delta

[color]
	branch      = auto
	diff        = auto
	interactive = auto
	status      = auto

[color "status"]
	added     = green
	changed   = yellow
	untracked = magenta

[delta]
   line-numbers = true
   syntax-theme = gruvbox-dark

[alias]
   branches = branch --format='%(color:magenta)%(authorname)%(color:reset) %(HEAD) %(align:right,15)%(color:yellow)%(refname:short)%(color:reset)%(end) - %(contents:subject) %(color:green)(%(committerdate:relative))%(color:reset)' --sort=-committerdate
   last     = log -1 HEAD --stat
   unstage  = reset HEAD --
   uncommit = reset HEAD^

   st = "!f() {                      \
 		awk -vOFS='' '                 \
			NR==FNR {                   \
				all[i++] = $0;           \
				difffiles[$1] = $0;      \
				next;                    \
			}                           \
                                     \
			! ($2 in difffiles) {       \
				print;                   \
				next;                    \
			}                           \
                                     \
			{                           \
				gsub($2, difffiles[$2]); \
				print;                   \
			}                           \
                                     \
			END {                       \
				if (NR != FNR) {         \
					exit;                 \
				}                        \
                                     \
				for (i in all) {         \
					print all[i];         \
				}                        \
			}                           \
 		'                              \
 		<(git diff --color --stat=$(($(tput cols) - 3)) HEAD | sed '$d; s/^ //') \
 		<(git -c color.status=always status -sb );                               \
   }; f"

