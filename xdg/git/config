[commit]
   gpgsign  = true
   cleanup  = strip
   template = ~/.config/git/message
   verbose  = true

[push]
   default = current

[pull]
   ff     = only
   rebase = true

[rebase]
   autoStash = true

[core]
   editor = nvim
   pager  = delta

[merge]
	tool = nvimdiff

[advice]
	addEmptyPathspec = false

[color]
	branch      = auto
	diff        = auto
	interactive = auto
	status      = auto

[color "status"]
	added     = green
	changed   = yellow
	untracked = magenta

[delta]
   line-numbers = true
   syntax-theme = gruvbox-dark

[alias]
   branches = branch --format='%(color:magenta)%(authorname)%(color:reset) %(HEAD) %(align:right,15)%(color:yellow)%(refname:short)%(color:reset)%(end) - %(contents:subject) %(color:green)(%(committerdate:relative))%(color:reset)' --sort=-committerdate
   last     = log -1 HEAD --stat
   unstage  = reset HEAD --
   uncommit = reset HEAD^

	d = "!sh ~/.config/git/alias d"
	s = "!sh ~/.config/git/alias s"

	daily   = "!sh ~/.config/git/daily"
	history = "!sh ~/.config/git/history"
	moji    = "!sh ~/.config/git/gitmoji"
	stats   = "!sh ~/.config/git/stats"
