[pull]
	rebase = true

[merge]
	tool = nvimdiff

[rebase]
	autosquash = true
	autostash  = true

[rerere]
	enabled = true

[tag]
	gpgsign = true

[core]
	editor = nvim

[diff]
	algorithm = patience

[advice]
	addEmptyPathspec = false

[color]
	branch      = auto
	diff        = auto
	interactive = auto
	status      = auto
	showbranch  = auto
	ui          = true

[color "branch"]
	current  = blue italic
	local    = white
	remote   = yellow
	upstream = green

[color "diff"]
	meta = white dim
	frag = yellow
	old  = red
	new  = green

[color "status"]
	added        = green
	branch       = blue italic
	changed      = yellow
	nobranch     = red italic
	localbranch  = blue italic
	remotebranch = yellow italic
	unmerged     = red
	untracked    = magenta

[status]
	showstash = true

[alias]
	branches = branch --format='%(color:magenta)%(authorname)%(color:reset) %(HEAD) %(align:right,15)%(color:yellow)%(refname:short)%(color:reset)%(end) - %(contents:subject) %(color:green)(%(committerdate:relative))%(color:reset)' --sort=-committerdate
	last     = log -1 HEAD --stat
	unstage  = reset HEAD --
	uncommit = reset HEAD^

	d = "!sh ~/.config/git/alias d"
	s = "!sh ~/.config/git/alias s"

	daily = "!sh ~/.config/git/daily"
	stats = "!sh ~/.config/git/stats"
