[commit]
   gpgsign  = true
   cleanup  = strip
   status   = true
   template = ~/.config/git/message
   verbose  = true

[push]
   default = current

[pull]
   ff     = only
   rebase = true

[rebase]
   autoStash = true

[core]
   editor = nvim

[diff]
	algorithm = myers

[merge]
	tool = nvimdiff

[advice]
	addEmptyPathspec = false

[color]
	branch      = auto
	diff        = auto
	interactive = auto
	status      = auto
	showBranch = auto
	ui         = true

[color "branch"]
	current  = blue italic
	local    = white
	remote   = yellow
	upstream = green

[color "diff"]
	meta = white dim
	frag = yellow
	old  = red
	new  = green

[color "status"]
	added        = green
	branch       = blue italic
	changed      = yellow
	nobranch     = red italic
	localBranch  = blue italic
	remoteBranch = yellow italic
	unmerged     = red
	untracked    = magenta

[status]
	showStash = true

[alias]
   branches = branch --format='%(color:magenta)%(authorname)%(color:reset) %(HEAD) %(align:right,15)%(color:yellow)%(refname:short)%(color:reset)%(end) - %(contents:subject) %(color:green)(%(committerdate:relative))%(color:reset)' --sort=-committerdate
   last     = log -1 HEAD --stat
   unstage  = reset HEAD --
   uncommit = reset HEAD^

	d = "!sh ~/.config/git/alias d"
	s = "!sh ~/.config/git/alias s"

	daily = "!sh ~/.config/git/daily"
	stats = "!sh ~/.config/git/stats"
